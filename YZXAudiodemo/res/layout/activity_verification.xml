<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#f5f5f5"
	    android:orientation="vertical" >
	
	    <RelativeLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="50dip"
	    	android:background="#ffffff">
		    <RelativeLayout 
		        android:id="@+id/rl_back"
		        android:layout_width="50dip"
		    	android:layout_height="50dip">
			    <ImageButton
			    	android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:clickable="false"
			        android:focusable="false"
			        android:layout_centerInParent="true"
			        android:background="@drawable/common_list_back"/>
		    </RelativeLayout>
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/rl_back"
		        android:clickable="false"
		        android:text="@string/verification_name"
		        android:textSize="24sp"
		        android:textColor="#414141"
		        android:gravity="center_vertical"/>
		    <View 
	        	android:layout_width="match_parent"
	        	android:layout_height="2dip"
	        	android:layout_alignParentBottom="true"
	        	android:background="#67b83d"/>
	    </RelativeLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent" 
	        android:layout_height="101dip"
	        android:layout_marginTop="25dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:background="@drawable/login_input"
	        android:gravity="center"
	        android:orientation="vertical">
	        <LinearLayout
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:layout_weight="1"
	       	 	android:orientation="horizontal">
	        
	         	<EditText
		            android:id="@+id/verification_phone"
		            android:layout_width="match_parent"
		            android:layout_height="40dip"
		            android:layout_marginLeft="10dip"
		            android:layout_gravity="center"
		            android:hint="@string/verification_phone"
		            android:textColor="#6f6f6f"
		            android:background="@null" 
		            android:inputType="textNoSuggestions" />
	      	</LinearLayout>
	      	<View 
	      	    android:layout_width="match_parent"
	        	android:layout_height="1dip"
	        	android:background="@color/login_line"
	        	android:layout_marginLeft="10dip"
	        	android:layout_marginRight="10dip"/>
			<LinearLayout
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:layout_weight="1"
	       	 	android:orientation="horizontal">
		        <EditText
		            android:id="@+id/verification_num"
		            android:layout_width="match_parent"
		            android:layout_height="40dip"
		            android:layout_marginLeft="10dip"
		            android:layout_gravity="center"
		            android:hint="@string/verification_num"
		            android:textColor="#6f6f6f"
		            android:background="@null" 
		            android:inputType="textNoSuggestions" />
		    </LinearLayout>
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="60dip"
	        android:layout_marginTop="25dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	       	android:orientation="horizontal">
			<Button 
			    android:id="@+id/verification_getaudio"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="3"
			    android:gravity="center"
			    android:text="@string/verification_getaudio"
			    android:textColor="#4f4f4f"
			    android:background="@drawable/verification_bg"/>
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="5"
		        android:gravity="center"
		        android:text="@string/verification_text1"
		        android:textColor="#6f6f6f"
		        android:textSize="16sp"
		        android:background="@null" />
		    <Button 
		        android:id="@+id/verification_getsms"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="3"
			    android:gravity="center"
			    android:text="@string/verification_getsms"
			    android:textColor="#4f4f4f"
			    android:background="@drawable/verification_bg"/>
		</LinearLayout>
		    
	    <TextView
	        android:id="@+id/verification_bt"
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:layout_marginTop="25dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:clickable="false"
	        android:gravity="center"
	        android:text="@string/verification_text2"
	        android:textColor="#ffffff"
	        android:background="@drawable/login_login"
	        android:textSize="18sp" />

	</LinearLayout>
	<TextView
	    android:id="@+id/verification_tv_bottom"
		android:layout_width="match_parent"
		android:layout_height="38dip"
		android:layout_alignParentBottom="true"
		android:clickable="false"
		android:gravity="center"
		android:textColor="#d9d9d9"
		android:background="#373737"
		android:textSize="18sp"/>
</RelativeLayout>