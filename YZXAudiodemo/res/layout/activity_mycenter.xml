<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="50dip">
	    <RelativeLayout 
	        android:id="@+id/rl_mycenter"
	        android:layout_width="50dip"
	    	android:layout_height="50dip">
		    <ImageButton
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="false"
		        android:focusable="false"
		        android:layout_centerVertical="true"
		        android:background="@drawable/common_back"/>
	    </RelativeLayout>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_toRightOf="@id/rl_mycenter"
	        android:clickable="false"
	        android:text="@string/mycenter"
	        android:textSize="24sp"
	        android:textColor="#414141"
	        android:gravity="center_vertical"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#67b83d"/>
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="100dip"
    	android:background="#e5e5e5">
	    <RelativeLayout
	        android:layout_width="match_parent"
		    android:layout_height="60dip"
		    android:layout_centerInParent="true"
		    android:background="#ffffff">
		    <RelativeLayout 
		        android:id="@+id/rl_admin"
		        android:layout_width="60dip"
		    	android:layout_height="60dip">
			    <ImageView
			    	android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"
			        android:background="@drawable/mycenter_admin"/>
			</RelativeLayout>
			<TextView
			    android:id="@+id/tv1"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/rl_admin"
		        android:clickable="false"
		        android:text="@string/mycenter_admin"
		        android:textSize="20sp"
		        android:textColor="#282828"
		        android:gravity="center_vertical" />  
		    <TextView
		        android:id="@+id/mycenter_account"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginRight="20dip"
		        android:layout_toRightOf="@id/tv1"
		        android:layout_alignParentRight="true"
		        android:clickable="false"
		        android:textSize="20sp"
		        android:textColor="#808080"
		        android:gravity="center_vertical" />  
	    </RelativeLayout>
	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="match_parent"
		android:layout_height="60dip"
		android:background="#ffffff">
		<RelativeLayout 
		    android:id="@+id/rl_name"
		    android:layout_width="60dip"
		    android:layout_height="60dip">
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerInParent="true"
			    android:background="@drawable/mycenter_name"/>
			</RelativeLayout>
			<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/rl_name"
		        android:clickable="false"
		        android:text="@string/mycenter_name"
		        android:textSize="20sp"
		        android:textColor="#282828"
		        android:gravity="center_vertical" />  
		    <TextView
		        android:id="@+id/mycenter_type"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginRight="20dip"
		        android:layout_alignParentRight="true"
		        android:clickable="false"
		        android:textSize="20sp"
		        android:textColor="#808080"
		        android:gravity="center_vertical" />  
	    </RelativeLayout>
	    <RelativeLayout
	        android:layout_width="match_parent"
		    android:layout_height="60dip"
		    android:background="#ffffff">
		    <RelativeLayout 
		        android:id="@+id/rl_balance"
		        android:layout_width="60dip"
		    	android:layout_height="60dip">
			    <ImageView
			    	android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"
			        android:background="@drawable/mycenter_balance"/>
			</RelativeLayout>
			<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/rl_balance"
		        android:clickable="false"
		        android:text="@string/mycenter_balance"
		        android:textSize="20sp"
		        android:textColor="#282828"
		        android:gravity="center_vertical" />  
		    <TextView
		        android:id="@+id/mycenter_balance"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginRight="20dip"
		        android:layout_alignParentRight="true"
		        android:clickable="false"
		        android:textSize="20sp"
		        android:textColor="#808080"
		        android:gravity="center_vertical" />  
	    </RelativeLayout>
	<RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="80dip"
    	android:background="#e5e5e5">
	    <RelativeLayout
	       	android:id="@+id/mycenter_out"
	        android:layout_width="match_parent"
		    android:layout_height="60dip"
		    android:layout_alignParentBottom="true"
		    android:background="#ffffff">
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginRight="20dip"
		        android:layout_centerInParent="true"
		        android:clickable="false"
		        android:focusable="false"
		        android:textSize="20sp"
		        android:text="@string/mycenter_out"
		        android:textColor="#67b83d"
		        android:gravity="center_vertical" />  
		 </RelativeLayout>
	</RelativeLayout>
</LinearLayout>
