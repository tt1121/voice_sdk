<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical">
	    <RelativeLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="50dip"
	    	android:background="#ffffff">
		    <RelativeLayout 
		        android:id="@+id/rl_back"
		        android:layout_width="50dip"
		    	android:layout_height="50dip">
			    <ImageButton
			    	android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:clickable="false"
			        android:focusable="false"
			        android:layout_centerInParent="true"
			        android:background="@drawable/common_list_back"/>
		    </RelativeLayout>
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_toRightOf="@id/rl_back"
		        android:paddingLeft="10dip"
		        android:clickable="false"
		        android:text="@string/ability_conference"
		        android:textSize="24sp"
		        android:textColor="#414141"
		        android:gravity="center_vertical"/>
	    </RelativeLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="2dip"
	        android:background="#67b83d"/>
		<ListView 
		    android:id="@+id/conference_list"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="50dip"
	        android:dividerHeight="1dp"
	        android:fadingEdge="none"
	        android:footerDividersEnabled="true"
	        android:listSelector="#00000000"
	        android:scrollbars="vertical"
	        android:transcriptMode="normal" > 
	   </ListView>
	   </LinearLayout>
   <TextView
       android:id="@+id/conference_start"
       android:layout_width="fill_parent"
       android:layout_height="50dip"
       android:clickable="false"
       android:layout_alignParentBottom="true"
       android:gravity="center"
       android:text="@string/conference_start"
       android:textColor="#ffffff"
       android:background="@drawable/login_login"
       android:textSize="20sp" />
</RelativeLayout>

