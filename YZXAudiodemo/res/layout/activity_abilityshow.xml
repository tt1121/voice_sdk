<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    
	<include
        android:id="@+id/top_bar"
        layout="@layout/top_ability" />
	
	<View 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#67b83d"/>
	
	<ImageView
        android:id="@+id/ability_image1"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ability_advert"/>
	
	<RelativeLayout
	    android:layout_width="match_parent"
    	android:layout_height="match_parent">
    	<TextView
    	    android:id="@+id/tv_bottom"
			android:layout_width="match_parent"
			android:layout_height="38dip"
			android:clickable="false"
			android:gravity="center"
			android:layout_alignParentBottom="true"
			android:textColor="#d9d9d9"
			android:background="#373737"
			android:textSize="18sp"/>
		<LinearLayout
		    android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:layout_above="@id/tv_bottom"
	    	android:orientation="vertical">
	    	<LinearLayout
		    	android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	    		android:orientation="horizontal">
	    		<LinearLayout
	    		    android:id="@+id/ll_audio"
		    		android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	    			android:layout_weight="1"
	    			android:gravity="center"
	    			android:orientation="vertical">
		    		<ImageView
				        android:id="@+id/ability_audio"
				    	android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:clickable="false"
				        android:focusable="false"
				        android:background="@drawable/ability_audio"/>
		    		<TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:clickable="false"
				        android:focusable="false"
				        android:gravity="center_vertical"
				        android:text="@string/ability_audio"
				        android:textColor="#666666"
				        android:textSize="22sp"/>
		    	</LinearLayout>

	    		<View 
	    		    android:layout_width="2dip"
	    			android:layout_height="match_parent"
	    			android:background="@drawable/line_vertical"/>
		    	<LinearLayout
		    	    android:id="@+id/ll_im"
		    		android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	    			android:layout_weight="1"
	    			android:gravity="center"
	    			android:orientation="vertical">
		    		<ImageView
				        android:id="@+id/ability_im"
				    	android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:clickable="false"
				        android:focusable="false"
				        android:background="@drawable/ability_im"/>
		    		<TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:clickable="false"
				        android:focusable="false"
				        android:gravity="center_vertical"
				        android:text="@string/ability_im"
				        android:textColor="#666666"
				        android:textSize="22sp"/>
		    	</LinearLayout>
			</LinearLayout>
			<View 
	    		android:layout_width="match_parent"
	    		android:layout_height="2dip"
	    		android:background="@drawable/line_horizonta"/>
			<LinearLayout
		    	android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	    		android:orientation="horizontal">
	    		<LinearLayout
	    		    android:id="@+id/ll_verification"
		    		android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	    			android:layout_weight="1"
	    			android:gravity="center"
	    			android:orientation="vertical">
		    		<ImageView
				        android:id="@+id/ability_verification"
				    	android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:clickable="false"
				        android:focusable="false"
				        android:background="@drawable/ability_verification"/>
		    		<TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:clickable="false"
				        android:focusable="false"
				        android:gravity="center_vertical"
				        android:text="@string/ability_verification"
				        android:textColor="#666666"
				        android:textSize="22sp"/>
		    	</LinearLayout>
		    	<View 
	    		    android:layout_width="2dip"
	    			android:layout_height="match_parent"
	    			android:background="@drawable/line_vertical"/>
		    	<LinearLayout
		    	    android:id="@+id/ll_video"
		    		android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	    			android:layout_weight="1"
	    			android:gravity="center"
	    			android:orientation="vertical">
		    		<ImageView
				        android:id="@+id/ability_video"
				    	android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:clickable="false"
				        android:focusable="false"
				        android:background="@drawable/ability_video"/>
		    		<TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:clickable="false"
				        android:focusable="false"
				        android:gravity="center_vertical"
				        android:text="@string/ability_video"
				        android:textColor="#acacac"
				        android:textSize="22sp"/>
		    	</LinearLayout>
			</LinearLayout>
			<View 
	    		android:layout_width="match_parent"
	    		android:layout_height="2dip"
	    		android:background="@drawable/line_horizonta"/>
			<LinearLayout
		    	android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	    		android:orientation="horizontal">
		    	<RelativeLayout 
		    	    android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	    			android:layout_weight="1">
		    		<LinearLayout
		    		    android:id="@+id/ll_conference"
			    		android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:gravity="center"
		    			android:orientation="vertical">
			    		<ImageView
					        android:id="@+id/ability_conference"
					    	android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:clickable="false"
					        android:focusable="false"
					        android:background="@drawable/ability_conference"/>
			    		<TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:clickable="false"
					        android:focusable="false"
					        android:gravity="center_vertical"
					        android:text="@string/ability_conference"
					        android:textColor="#666666"
					        android:textSize="22sp"/>
			    	</LinearLayout>
		    	</RelativeLayout>
		    	<View 
	    		    android:layout_width="2dip"
	    			android:layout_height="match_parent"
	    			android:background="@drawable/line_vertical"/>
		    	<RelativeLayout 
		    	    android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	    			android:layout_weight="1">
		    		<ImageView
				    	android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:clickable="false"
				        android:focusable="false"
				        android:background="@drawable/ability_coming"/>
			    	<LinearLayout
			    	    android:id="@+id/ll_groupchat"
			    		android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:gravity="center"
		    			android:orientation="vertical">
			    		<ImageView
					        android:id="@+id/ability_groupchat"
					    	android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:clickable="false"
					        android:focusable="false"
					        android:background="@drawable/ability_groupchat"/>
			    		<TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:clickable="false"
					        android:focusable="false"
					        android:gravity="center_vertical"
					        android:text="@string/ability_groupchat"
					        android:textColor="#acacac"
					        android:textSize="22sp"/>
			    	</LinearLayout>
		    	</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
